{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2023"],
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.graphql", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
